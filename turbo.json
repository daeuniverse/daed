{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "globalPassThroughEnv": ["CI", "VERCEL", "NODE_ENV", "VITE_MOCK_MODE", "SCHEMA_PATH"],
  "remoteCache": {
    "enabled": false
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputLogs": "new-only",
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "interruptible": true,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
